{
  "openapi": "3.0.0",
  "info": {
    "title": "Calendly MCP Server",
    "version": "1.0.0"
  },
  "paths": {
    "/message": {
      "post": {
        "summary": "Send a message to the Calendly MCP tool server",
        "operationId": "sendMessage",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MCPMessage"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MCPMessage": {
        "type": "object",
        "properties": {
          "tool_choice": {
            "type": "string"
          },
          "parameters": {
            "type": "object"
          }
        },
        "required": ["tool_choice", "parameters"]
      }
    }
  }
}
